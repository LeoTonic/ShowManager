<UserControl x:Class="ShowManager.Controls.SMListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShowManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
	<ListBox x:Name="ListViewControl" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" AllowDrop="True" ItemsSource="{Binding Items}"
						SelectionMode="Extended" Background="White" />
</UserControl>
