<Window x:Class="ShowManager.Controls.ElementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowManager.Controls"
        mc:Ignorable="d"
        Title="Значок и название" Height="60" Width="300" ScrollViewer.VerticalScrollBarVisibility="Disabled" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
	<StackPanel Orientation="Horizontal">
		<Image Source="{Binding ImagePath}" Width="32" Height="32" Stretch="Fill" Margin="4" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
		<TextBox Text="{Binding ElementName}" Width="190" Height="24" FontFamily="Arial" FontSize="14" Margin="4" KeyUp="TextBox_KeyUp"/>
		<Button Content="ОК" Width="40" Height="24" Margin="8,4,4,4" Click="Button_Click"/>
	</StackPanel>
</Window>
