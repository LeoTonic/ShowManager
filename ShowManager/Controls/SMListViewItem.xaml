<UserControl x:Class="ShowManager.Controls.SMListViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShowManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
	<Border BorderBrush="#FFB0B0B0" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" CornerRadius="4">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition></ColumnDefinition>
					<ColumnDefinition></ColumnDefinition>
					<ColumnDefinition></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<Image Source="{Binding ImagePath}" Width="32" Height="32" HorizontalAlignment="Left" Margin="2" Stretch="Fill"/>
				<TextBlock Text="{Binding Text}" TextWrapping="NoWrap" FontFamily="Arial" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Grid.Column="1" Margin="5"/>
				<TextBlock Text="{Binding Age}" TextWrapping="NoWrap" FontFamily="Arial" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="10" Grid.Column="2" Margin="5"/>
			</Grid>
		</Border>
</UserControl>
